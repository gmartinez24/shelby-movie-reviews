<% layout("layouts/boilerplate") %>
<h1><%= movie.title %></h1>
<img style="width:30%" src=<%=`https://image.tmdb.org/t/p/w500${movie.poster_path}`%>>
<p><%= movie.runtime%></p>
<p><a href="/movies/<%=movie._id %>/edit">Edit</a></p>

<form action="/movies/<%=movie._id %>/?_method=DELETE" method="POST">
    <button>Delete</button>
</form>

<footer>
    <p><a href="/movies">All Movies</a></p>
</footer>
