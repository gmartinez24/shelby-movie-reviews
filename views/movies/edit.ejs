<% layout("layouts/boilerplate") %>
<h1>Edit <%= movie.title %></h1>
<form action="/movies/<%=movie._id %>/?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="movie[title]" value="<%=movie.title %>" />
        <label for="title">Year</label>
        <input type="number" id="year" name="movie[year]" value="<%=movie.year %>" />
        <label for="title">Runtime</label>
        <input type="number" id="runtime" name="movie[runtime]" value="<%=movie.runtime %>" />
    </div>
    <button>Confirm</button>
</form>
<a href="/movies/<%=movie._id %>">Cancel</a>
